<%= form_for @user do |f| %>
  <div class="row">
    <div class="col-md-4">
      First name :
      <%= f.text_field :first_name %>
    </div>
    <div>
      <% if @user.errors[:first_name].present? %>
        <div><%= @user.errors[:first_name].to_sentence  %></div>
      <% end%>
    </div>
    <div class="col-md-4">
      Last name :
      <%= f.text_field :last_name %>
    </div>
    <div>
      <% if @user.errors[:last_name].present? %>
        <div><%= @user.errors[:last_name].to_sentence  %></div>
      <% end%>
    </div>
    <div class="col-md-4">
      Email :
      <%= f.email :email %>
    </div>
    <div class="col-md-12">
      <%= f.submit %>
    </div>
  </div>
<% end %>
<%= link_to 'Back to list', [:users] %>
