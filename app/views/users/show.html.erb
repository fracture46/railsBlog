<h1>Details of user nÂ°<%= @user.id %></h1>

<div class="container">
  <div class="row user_data">
    <div class="col-md-4">
      <span class="badge badge-primary">First name</span> <%= @user.first_name %>
    </div>
    <div class="col-md-4">
      <span class="badge badge-primary">Last name</span> <%= @user.last_name %>
    </div>
    <div class="col-md-4">
      <span class="badge badge-primary">Email</span> <%= @user.email %>
    </div>
  </div>
</div>

<% if @user.posts.count > 0%>
<h2>There posts</h2>
<ul class="group-item">
  <% @user.posts.each do |post| %>
  <li class="list-group-item">
    <%= link_to [post] do %>
      <%= post.titre %>
    <% end %>
    Posted at <%= post.date_publication.strftime('%d/%m/%Y') %>
    </li>
  <% end %>
</ul>
<% end %>

<% if current_user == @user %>
  <div class="space">
    <%= link_to 'edit', [:edit, @user], class: "btn btn-warning" %>
  </div>
<% end %>

<%= link_to 'Back to list', [:posts], class: "btn btn-info btn_back" %>